<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:Aura;assembly=Aura"
	x:Class="Aura.MainMenu">
	 <MasterDetailPage.Master>
        <ContentPage Title="Dashboard" BackgroundColor="{StaticResource LightBlue}">
        	<Grid RowSpacing="0" ColumnSpacing="0">
			<Grid.ColumnDefinitions>
		        <ColumnDefinition Width="Auto" />
		        <ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
		        <RowDefinition Height="*" />
		        <RowDefinition Height="60" />
			</Grid.RowDefinitions>
	        	<StackLayout Padding="15,15,0,0" Grid.Column="0">
	        		<Button Text="" Style="{StaticResource MasterIconStyle}" Clicked="OnMenuBtnClicked" CommandParameter="Dashboard"/>
	        		<Button Text="" Style="{StaticResource MasterIconStyle}"  Clicked="OnMenuBtnClicked" CommandParameter="Train Gestures"/>
	        	</StackLayout>        	
	        	<StackLayout Padding="15,15,0,0" Grid.Column="1">
	        		<Button Text="Aura" Style="{StaticResource MasterLabelStyle}" Clicked="OnMenuBtnClicked" CommandParameter="Dashboard"/>
	        		<Button Text="Train Gestures" Style="{StaticResource MasterLabelStyle}"  Clicked="OnMenuBtnClicked" CommandParameter="Train Gestures"/>
	        	</StackLayout>
	        	<Grid RowSpacing="0" Padding="-1,0,-1,-1" ColumnSpacing="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
	        	<Grid.ColumnDefinitions>
			        <ColumnDefinition Width="0.5*" />
			        <ColumnDefinition Width="0.5*" />
				</Grid.ColumnDefinitions>
	        		<Button BorderWidth="0.5" BorderRadius="0" Text="" Grid.Column="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Style="{StaticResource MasterIconStyle}" Clicked="OnSettingsBtnClicked" CommandParameter="Fields"/>
	        		<Button BorderWidth="0.5" BorderRadius="0" Text="" Grid.Column="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Style="{StaticResource MasterIconStyle}" Clicked="OnHelpBtnClicked" CommandParameter="Fields"/>
	        	</Grid>
			</Grid> 
			       
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
